{
  "name": "express-ws",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon index",
    "test": "cross-env NODE_ENV=test jest --watch --detectOpenHandles",
    "lint": "eslint .",
    "test:staging": "cross-env NODE_ENV=test jest --runInBand --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/locspoc/tdd-with-express.git"
  },
  "author": "Loc Tran",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/locspoc/tdd-with-express/issues"
  },
  "homepage": "https://github.com/locspoc/tdd-with-express#readme",
  "dependencies": {
    "@vjpr/sequelize-typescript": "^1.1.0-vjpr.0",
    "bcrypt": "^5.0.1",
    "config": "^3.3.8",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "i18next": "^22.0.2",
    "i18next-fs-backend": "^1.1.5",
    "i18next-http-middleware": "^3.2.1",
    "nodemailer": "^6.8.0",
    "sequelize": "^5.22.3",
    "sqlite3": "^5.1.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "jest-watch-typeahead": "^2.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "smtp-server": "^3.11.0",
    "supertest": "^6.2.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "verbose": true
  }
}
